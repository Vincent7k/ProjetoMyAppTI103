<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".SplashActivity">

    <TableRow>

        <TextView
            android:id="@+id/txtTextoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Texto A"
            android:textColor="#3F51B5"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtTextoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtTextoA"
            android:layout_weight="1"
            android:text="Texto B"
            android:textColor="#2196F3"
            android:textSize="50sp"
            android:textStyle="bold" />
    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/txtTextoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTextoB"
            android:layout_weight="1"
            android:text="Texto C"
            android:textColor="#03A9F4"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtTextoD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTextoB"
            android:layout_toRightOf="@id/txtTextoC"
            android:layout_weight="1"
            android:text="Texto D"
            android:textColor="#00BCD4"
            android:textSize="50sp"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>